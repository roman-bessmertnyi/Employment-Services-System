<body>

    <div class="row">
        <div class="col-sm-3 btn-group btn-group-lg">
            <button type="button" class="btn btn-primary">
                <img src="~/Content/title.gif" alt="title" />
            </button>
        </div>
        <div class="col-sm-5 btn-group btn-group-lg btn-block">
            <button type="button" class="btn btn-primary"><h3>Головна</h3></button>
            <button type="button" class="btn btn-primary"><h3>Пошук роботи</h3></button>
            <button type="button" class="btn btn-primary"><h3>Створити резюме</h3></button>
        </div>
        <div class="col-sm-4">
            <div class="row">
                <div class="col">
                    <p>Шукачі роботи:</p>
                    <div class="btn-group btn-group-lg">
                        <button type="button" class="btn btn-primary">Вхід</button>
                        <button type="button" class="btn btn-primary">Реєстрація</button>
                    </div>
                </div>
                <div class="col">
                    <p>Роботодавці:</p>
                    <div class="btn-group btn-group-lg">
                        <button type="button" class="btn btn-primary">Вхід</button>
                        <button type="button" class="btn btn-primary">Реєстрація</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row pt-4">
        <div class="col">
            <label for="job_Category">Рубрика:</label>
            <input type="text" class="form-control" id="job_Category">
        </div>
        <div class="col">
            <label for="job_Location">Регіон:</label>
            <input type="text" class="form-control" id="job_Location">
        </div>
        <div class="col">
            <button type="button" class="btn btn-warning btn-lg btn-block">Знайти роботу!</button>
        </div>
    </div>

